{% extends 'base.html.twig' %}

{% block title %}Profil utilisateur{% endblock %}

{% block body %}
    <div class="max-w-4xl mx-auto mt-10 p-6 bg-white rounded-xl shadow-md dark:bg-gray-700">
        <h1 class="text-2xl font-bold mb-6">Profil de {{ user.firstName }}</h1>

        <div class="user-info flex items-center dark:bg-gray-700">
            <img src="{{ asset('/images/mastermind.png') }}" 
                alt="User Icon" 
                class="w-24 h-24 rounded-full mr-6">
            <div class="flex-1">
                <div class="text-lg font-semibold">{{ user.firstName }} {{ user.lastName }}</div>
                <div class="text-gray-600">{{ user.email }}</div>
                <div class="text-sm text-gray-500 mt-2">
                    Rôle: {{ user.roles[0]|replace({'ROLE_': ''})|capitalize }}
                </div>
            </div>
        </div>

        <div class="mt-8">
            <a href="{{ path('logout') }}" class="bg-red-500 hover:bg-red-600 text-white py-2 px-4 rounded-lg focus:outline-none focus:ring-2 focus:ring-red-300">
                Déconnexion
            </a>
        </div>
    </div>
{% endblock %}
