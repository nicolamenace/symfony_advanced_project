{% extends 'base.html.twig' %}

{% block title %}Login{% endblock %}

{% block body %}
<div class="min-h-screen bg-gray-50 dark:bg-gray-800 flex flex-col justify-center py-12 sm:px-6 lg:px-8">
  <div class="sm:mx-auto sm:w-full sm:max-w-md">
    <h2 class="text-center text-3xl font-extrabold text-gray-900 dark:text-white">Login to your account</h2>
  </div>

  <div class="mt-8 sm:mx-auto sm:w-full sm:max-w-md">
    <div class="bg-white dark:bg-gray-700 py-8 px-4 shadow sm:rounded-lg sm:px-10">
      <form class="space-y-6" method="post" action="{{ path('login') }}" data-turbo="false">
        {% if error %}
          <div class="bg-red-100 dark:bg-red-800 border-l-4 border-red-500 dark:border-red-600 text-red-700 dark:text-red-300 p-4 mb-4 rounded">
            <p>{{ error.messageKey|trans(error.messageData, 'security') }}</p>
          </div>
        {% endif %}

        <div>
          <label for="username" class="block text-sm font-medium text-gray-700 dark:text-gray-300">Email</label>
          <div class="mt-1">
            <input id="_username" name="_username" type="email" value="{{ last_username }}" required autofocus 
                   class="appearance-none block w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-md shadow-sm placeholder-gray-400 dark:placeholder-gray-500 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm dark:bg-gray-600 dark:text-white">
          </div>
        </div>

        <div>
          <label for="password" class="block text-sm font-medium text-gray-700 dark:text-gray-300">Password</label>
          <div class="mt-1">
            <input id="_password" name="_password" type="password" required 
                   class="appearance-none block w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-md shadow-sm placeholder-gray-400 dark:placeholder-gray-500 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm dark:bg-gray-600 dark:text-white">
          </div>
        </div>

        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

        <div>
          <button type="submit" 
                  class="w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 dark:bg-indigo-700 dark:hover:bg-indigo-800 dark:focus:ring-indigo-500">
            Login
          </button>
        </div>
      </form>
      <div class="mt-4 text-sm text-center">
        <p>Don't have an account? <a href="{{ path('create') }}" class="text-indigo-600 hover:text-indigo-500 font-medium dark:text-indigo-400 dark:hover:text-indigo-300">Create one here</a></p>
      </div>
    </div>
  </div>
</div>
{% endblock %}
