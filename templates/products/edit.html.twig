{% extends 'base.html.twig' %}

{% block title %}Edit Product{% endblock %}

{% block body %}
<div class="container mx-auto mt-8 p-6 max-w-lg bg-white dark:bg-gray-800 shadow-lg rounded-xl">
    <h1 class="text-3xl font-bold text-gray-700 dark:text-gray-200 mb-6 text-center">Edit Product</h1>

    {{ form_start(form, {'attr': {'class': 'space-y-6'}}) }}
        <div class="flex flex-col">
            {{ form_label(form.name, 'Product Name', {'label_attr': {'class': 'block text-gray-700 dark:text-gray-300 font-medium mb-2'}}) }}
            {{ form_widget(form.name, {'attr': {'class': 'w-full border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-700 text-gray-800 dark:text-gray-200 px-4 py-2 rounded-lg focus:ring-2 focus:ring-blue-400 dark:focus:ring-blue-600'}}) }}
        </div>

        <div class="flex flex-col">
            {{ form_label(form.description, 'Description', {'label_attr': {'class': 'block text-gray-700 dark:text-gray-300 font-medium mb-2'}}) }}
            {{ form_widget(form.description, {'attr': {'class': 'w-full border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-700 text-gray-800 dark:text-gray-200 px-4 py-2 rounded-lg focus:ring-2 focus:ring-blue-400 dark:focus:ring-blue-600'}}) }}
        </div>

        <div class="flex flex-col">
            {{ form_label(form.price, 'Price', {'label_attr': {'class': 'block text-gray-700 dark:text-gray-300 font-medium mb-2'}}) }}
            {{ form_widget(form.price, {'attr': {'class': 'w-full border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-700 text-gray-800 dark:text-gray-200 px-4 py-2 rounded-lg focus:ring-2 focus:ring-blue-400 dark:focus:ring-blue-600'}}) }}
        </div>

        <div class="flex flex-col">
            {{ form_label(form.image, 'Product Image', {'label_attr': {'class': 'block text-gray-700 dark:text-gray-300 font-medium mb-2'}}) }}
            {{ form_widget(form.image, {'attr': {'class': 'w-full border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-700 text-gray-800 dark:text-gray-200 px-4 py-2 rounded-lg focus:ring-2 focus:ring-blue-400 dark:focus:ring-blue-600'}}) }}
        </div>

        <div class="flex justify-center">
            {{ form_widget(form.save, {'attr': {'class': 'bg-blue-500 dark:bg-blue-600 hover:bg-blue-600 dark:hover:bg-blue-700 text-white py-2 px-4 rounded-lg focus:ring-2 focus:ring-blue-300 dark:focus:ring-blue-500'}}) }}
        </div>
    {{ form_end(form) }}

    <div class="mt-4 text-center">
        <a href="{{ path('product_list') }}" class="text-blue-500 dark:text-blue-400 hover:underline">Back to Product List</a>
    </div>
</div>
{% endblock %}
